# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mui_gen_db"
DIRECT_URL="postgresql://username:password@localhost:5432/mui_gen_db"

# LLM Configuration
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-2.5-flash"

# Authentication (if using NextAuth)
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# Security
CORS_ORIGIN="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_COMPONENT_SAVING=true
ENABLE_ACCESSIBILITY_CHECKS=true
ENABLE_CODE_VALIDATION=true
ENABLE_TEMPLATE_FALLBACK=true

# Preview System
PREVIEW_TIMEOUT_MS=10000
MAX_BUNDLE_SIZE_MB=5

# Component Library
MAX_COMPONENTS_PER_USER=100
COMPONENT_RETENTION_DAYS=365
